<p id="notice"><%= notice %></p>

<h3>Listando dados upados pelos txt(s)</h3>
<br>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Comprador</th>
      <th scope="col">Descrição</th>
      <th scope="col">Preço Unitário</th>
      <th scope="col">Quantidade</th>
      <th scope="col">Endereço</th>
      <th scope="col">Fornecedor</th>
      <th scope="col">Total da linha</th>
      <th scope="col">#</th>

    </tr>
  </thead>

  <tbody>
    <% @relatories.each do |relatory| %>
      <tr>
        <td><%= relatory.buyer %></td>
        <td><%= relatory.description %></td>
        <td><%= relatory.price %></td>
        <td><%= relatory.quantity %></td>
        <td><%= relatory.address %></td>
        <td><%= relatory.owner %></td>
        <td><%= relatory.price*relatory.quantity %></td>
        <td><%= link_to 'Mostrar', relatory ,class: "btn btn-primary btn-sm" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
